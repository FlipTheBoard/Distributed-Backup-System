[Unit]
Description=FTB Backup Client

Wants=network.target
After=syslog.target network-online.target

[Service]
Type=simple
ExecStart=/***
Restart=on-failure
RestartSec=100
KillMode=process
Environment=FTB_BACKUP_DIR=/***
Environment=FTB_SERVER_ADDR=http://0.0.0.0:9876

[Install]
WantedBy=multi-user.target
